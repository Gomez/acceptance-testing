#!/bin/bash
<% if @setup_data[:source] == 'local' %>
  echo "core local" >> /var/www/versions.txt
  echo "3rdparty local" >> /var/www/versions.txt
  echo "apps local " >> /var/www/versions.txt
<% else %>
  echo -n "core " >> /var/www/versions.txt
  cd /usr/local/src/owncloud-core; git log -1 --format="%H" >> /var/www/versions.txt
  echo -n "3rdparty " >> /var/www/versions.txt
  cd /usr/local/src/owncloud-3rdparty; git log -1 --format="%H" >> /var/www/versions.txt
  echo -n "apps " >> /var/www/versions.txt
  cd /usr/local/src/owncloud-apps; git log -1 --format="%H" >> /var/www/versions.txt
<% end %>
