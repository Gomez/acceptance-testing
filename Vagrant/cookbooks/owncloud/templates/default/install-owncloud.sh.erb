cd /tmp
wget https://github.com/owncloud/3rdparty/archive/<%= @branch %>.tar.gz
mv <%= @branch %>.tar.gz 3rdparty.tar.gz
wget https://github.com/owncloud/core/archive/<%= @branch %>.tar.gz
mv <%= @branch %>.tar.gz core.tar.gz

# we perform root installation into /var/www
cd /var/www/
rm -rf *
tar -C /tmp -xzf /tmp/core.tar.gz
mv /tmp/core-<%= @branch %>/* .
tar -C /tmp -xzf /tmp/3rdparty.tar.gz
mkdir -p /var/www/3rdparty
mv /tmp/3rdparty-<%= @branch %>/* 3rdparty

# basic setup
mkdir data
chown www-data:www-data config data apps
