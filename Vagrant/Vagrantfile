# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant::Config.run do |config|

  # base box and URL where to get it if not present
  config.vm.box = "precise32"
  config.vm.box_url = "http://files.vagrantup.com/precise32.box"

  # Enable and configure the chef solo provisioner
  config.vm.provision :chef_solo do |chef|
    # This path will be expanded relative to the project directory
    chef.cookbooks_path = "cookbooks"
    chef.roles_path = "roles"
  end

  # config for the apache box
  # TODO: rename master_with_sqlite_on_apache
  config.vm.define "master_on_apache" do |app|
    app.vm.network :hostonly, "33.33.33.10"
    app.vm.host_name = "apache01.local"
    app.vm.provision :chef_solo do |chef|
      chef.add_role "server_apache2"
      chef.add_role "owncloud_default"
    end
  end
