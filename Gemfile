source :rubygems

gem 'capybara',               '~> 2.1.0'  # integration tests
gem 'capybara-webkit',        '~> 1.0.0'  # webkit headless browser
gem 'selenium-webdriver',     '~> 2.35.0' # use selenium for controlling the browser
gem 'rspec',                  '~> 2.14.1' # test framework
gem 'debugger',               '~> 1.6.1'  # Ruby debugger 
gem 'cucumber',               '~> 1.3.6'  # user stories
gem 'launchy',                '~> 2.3.0'  # starts programs
gem 'headless',               '~> 1.0.1'  # don't show the browser window
gem 'cocaine',                '~> 0.5.1'  # Executing command line commands
gem 'mixlib-cli',             '~> 1.3.0'  # Parsing command line options
gem 'berkshelf',              '~> 2.0.0'  # Cookbook management
